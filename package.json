{
  "name": "work-loop-cli",
  "version": "1.0.0",
  "description": "Automated task execution loop with TFQ integration",
  "main": "dist/cli/index.js",
  "bin": {
    "work-loop": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run tests/e2e",
    "test:unit": "vitest run tests/unit tests/integration",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build && npm pack",
    "install-global": "npm run build && npm link",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "automation",
    "tasks",
    "tfq",
    "typescript"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "execa": "^8.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^8.50.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
